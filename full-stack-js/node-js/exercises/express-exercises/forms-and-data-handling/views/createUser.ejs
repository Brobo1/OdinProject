<!-- views/createUser.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
</head>
<body>
<h1><%= title %></h1>
<%- include("partials/errors.ejs") %>
<form
        action="/create"
        method="POST"
>
    <label for="firstName">First Name: </label>
    <br>

    <input
            type="text"
            name="firstName"
            id="firstName"
            required
    >
    <br>

    <label for="lastName">Last Name: </label>
    <br>
    <input
            type="text"
            name="lastName"
            id="lastName"
            required
    >
    <br>
    <br>
    <label for="email">Email: </label>
    <br>
    <input
            type="text"
            name="email"
            id="email"
            required
    >
    <br>
    <label for="age">Age: </label>
    <br>
    <input
            type="text"
            name="age"
            id="age"
            required
    >
    <br>
    <br>
    <label for="bio">Bio: </label>
    <br>
    <input
            type="text"
            name="bio"
            id="bio"
            required
    >
    <br>
    <br>
    <button type="submit">Submit</button>
</form>
<br>
<a href="/">Back to home</a>
</body>
</html>
